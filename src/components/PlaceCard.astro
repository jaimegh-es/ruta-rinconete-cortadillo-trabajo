---
interface Props {
    nombre: string;
    texto: string;
    index: number;
}

const { nombre, texto, index } = Astro.props;
---

<div class="reveal h-full" style={`transition-delay: ${index * 50}ms`}>
    <div class="bg-white rounded-2xl shadow-sm border border-stone-100 p-6 md:p-8 hover:shadow-xl hover:shadow-amber-900/5 hover:border-amber-100 transition-all duration-300 group h-full flex flex-col relative overflow-hidden">
        <!-- Decorative background number -->
        <span class="absolute -top-6 -right-6 text-[8rem] font-serif font-bold text-stone-50 group-hover:text-amber-50/50 transition-colors select-none z-0 pointer-events-none">
            {index + 1}
        </span>

        <div class="flex items-start justify-between mb-4 relative z-10">
            <h3 class="text-xl md:text-2xl font-bold font-serif text-stone-900 group-hover:text-amber-700 transition-colors leading-tight">
                {nombre}
            </h3>
        </div>
        
        <div class="mt-auto relative z-10">
            <div class="w-12 h-1 bg-amber-200 mb-4 group-hover:w-20 transition-all duration-300"></div>
            <p class="text-stone-600 leading-relaxed text-sm md:text-base">
                {texto}
            </p>
        </div>
    </div>
</div>